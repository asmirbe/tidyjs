{
    "groups": [
        {
            "name": "React",
            "match": "^react",
            "order": 1,
            "sortOrder": "alphabetic"
        },
        {
            "name": "Node Modules",
            "match": "^[^@/.]",
            "order": 2
        },
        {
            "name": "Scoped Packages",
            "match": "^@",
            "order": 3
        },
        {
            "name": "Local Files",
            "match": "^\\.",
            "order": 4
        }
    ],
    "format": {
        "removeUnusedImports": false,
        "removeMissingModules": false,
        "bracketSpacing": true
    }
}