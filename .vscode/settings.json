{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/dist/**": false,
    "**/node_modules": true
  },
  "search.exclude": {
    "**/dist/**": true
  },
  "typescript.tsc.autoDetect": "off",
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.defaultFormatter": "Asmir.tidyjs"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "Asmir.tidyjs"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "Asmir.tidyjs"
  },
  "[javascript]": {
    "editor.defaultFormatter": "Asmir.tidyjs"
  },
  // TidyJS
  "tidyjs.groups": [
    {
      "name": "Misc",
      "order": 0,
      "isDefault": true
    },
    {
      "name": "Utils",
      "match": ".*utils.*",
      "order": 3
    },
    {
      "name": "Parser",
      "match": "^tidyjs-parser$",
      "order": 1
    },
    {
      "name": "VSCode",
      "match": "^vscode$",
      "order": 2
    },
  ]
}