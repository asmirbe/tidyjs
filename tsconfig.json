{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "out/src",
    "lib": ["es2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["test/**/*", "node_modules", ".vscode", ".vscode-test"]
}
