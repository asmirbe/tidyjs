{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/dist/**": false,
    "**/node_modules": true
  },
  "search.exclude": {
    "**/dist/**": true
  },
  "typescript.tsc.autoDetect": "off",
  "eslint.enable": true,
  "eslint.validate": ["javascript", "typescript"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  // TidyJS
  "tidyjs.groups": [
    {
      "name": "Misc",
      "order": 0,
      "isDefault": true
    },
    {
      "name": "Utils",
      "regex": ".*utils.*",
      "order": 3
    },
    {
      "name": "Core",
      "regex": "^tidyjs-parser$",
      "order": 1
    },
    {
      "name": "VSCode",
      "regex": "^vscode$",
      "order": 2
    },
  ]
}
